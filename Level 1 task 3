Level 1 task 3.
#include <iostream>
using namespace std;
void kvadratVəKub(int a) {
    int kvadrat = a * a;
    int kub = a * a * a;

    cout << "Ededin kvadrati: " << kvadrat << endl;
    cout << "Ededin kubu: " << kub << endl;
}
int main() {
    int a;
    cout << "Bir tam eded daxil edin: ";
    cin >> a;
    kvadratVəKub(a);
return 0; 
}
